rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is the owner of the resource
    function isOwner(employeeId) {
      return request.auth.uid == employeeId;
    }
    
    // Helper function to validate image file
    function isValidImage() {
      return request.resource.size < 5 * 1024 * 1024 // 5MB max
          && request.resource.contentType.matches('image/.*');
    }
    
    // Helper function to check admin/HR/DemoManager roles
    function hasAdminOrDemoRole() {
      return isAuthenticated() && 
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role is list &&
             (('Super Admin' in firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role) ||
              ('Admin' in firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role) ||
              ('Service' in firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role) ||
              ('DemoManager' in firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role) ||
              ('HR' in firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role));
    }
    
    // *** NEW: Company logos - Admins can upload/manage ***
    match /companyLogos/{fileName} {
      allow read: if true; // Public read access for company logos
      allow write: if hasAdminOrDemoRole() && isValidImage();
      allow delete: if hasAdminOrDemoRole();
    }
    
    // Rules for check-in/out images
    match /check_inout_images/{employeeId}/{imageFile} {
      // Allow any authenticated user to upload check-in/out images
      // (employeeId is Firestore doc ID, not Firebase Auth UID, so we can't use isOwner)
      allow create: if isAuthenticated() 
                    && isValidImage();
      
      // Allow all authenticated users to read check-in/out images
      // (admins/HR will need to view these for verification)
      allow read: if isAuthenticated();
      
      // Prevent updates and deletes for data integrity
      allow update, delete: if false;
    }
    
    // Profile images
    match /profileImages/{userId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isOwner(userId);
    }
    
    // Quote Items Product Images
    match /quote_items/{itemId}/{fileName} {
      allow read: if true; // Public read access for product images
      allow write: if hasAdminOrDemoRole() && isValidImage();
      allow delete: if hasAdminOrDemoRole();
    }

    // PI Settings Logo
    match /piLayoutSettings/{fileName} {
      allow read: if true;
      allow write: if hasAdminOrDemoRole() && isValidImage();
    }

    // Item Images
    match /itemImages/{itemId}/{fileName} {
      allow read: if true;
      allow write: if hasAdminOrDemoRole() && isValidImage();
    }

    // Employee Images
    match /employeeImages/{employeeId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if hasAdminOrDemoRole() && isValidImage();
    }

    // Demo Machine Images
    match /demoMachineImages/{machineId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if hasAdminOrDemoRole() && isValidImage();
    }

    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}