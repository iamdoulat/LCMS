rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user has at least one of the required roles.
    function isOneOfRoles(allowedRoles) {
      // Use a ternary to safely access user roles only if the user document exists.
      return exists(/databases/$(database)/documents/users/$(request.auth.uid))
        ? (
            get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role is list
              ? get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role.hasAny(allowedRoles)
              : get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in allowedRoles
          )
        : false;
    }

    // Users collection rules
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isOneOfRoles(['Super Admin', 'Admin', 'Viewer']);
      
      // Allow users to update ONLY their own displayName and photoURL.
      allow update: if request.auth.uid == userId && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['displayName', 'photoURL', 'updatedAt']);

      // Allow Super Admins to write to any field in any user document.
      allow write: if isOneOfRoles(['Super Admin']);
    }

    // LC Entries collection rules
    match /lc_entries/{lcId} {
      allow read: if isOneOfRoles(['Super Admin', 'Admin', 'Viewer', 'Service', 'Commercial']);
      allow create, update: if isOneOfRoles(['Super Admin', 'Admin', 'Commercial']);
      allow delete: if isOneOfRoles(['Super Admin']);
    }

    // Customers (Applicants) collection rules
    match /customers/{customerId} {
      allow read: if isOneOfRoles(['Super Admin', 'Admin', 'Viewer', 'Accounts', 'Service', 'Commercial']);
      allow create, update: if isOneOfRoles(['Super Admin', 'Admin', 'Accounts', 'Commercial']);
      allow delete: if isOneOfRoles(['Super Admin']);
    }
    
    // Suppliers (Beneficiaries) collection rules
    match /suppliers/{supplierId} {
      allow read: if isOneOfRoles(['Super Admin', 'Admin', 'Viewer', 'Accounts', 'Service', 'Commercial']);
      allow create, update: if isOneOfRoles(['Super Admin', 'Admin', 'Accounts', 'Commercial']);
      allow delete: if isOneOfRoles(['Super Admin']);
    }

    // Items (Inventory) collection rules
    match /items/{itemId} {
      allow read: if isOneOfRoles(['Super Admin', 'Admin', 'Viewer', 'Accounts']);
      allow create, update: if isOneOfRoles(['Super Admin', 'Admin', 'Accounts']);
      allow delete: if isOneOfRoles(['Super Admin']);
    }
    
    // Quote Items collection rules
    match /quote_items/{itemId} {
      allow read: if isOneOfRoles(['Super Admin', 'Admin', 'Viewer', 'Accounts', 'Commercial']);
      allow create, update: if isOneOfRoles(['Super Admin', 'Admin', 'Accounts', 'Commercial']);
      allow delete: if isOneOfRoles(['Super Admin']);
    }
    
    // Quotes collection rules
    match /quotes/{quoteId} {
      allow read: if isOneOfRoles(['Super Admin', 'Admin', 'Viewer', 'Accounts', 'Commercial']);
      allow create, update: if isOneOfRoles(['Super Admin', 'Admin', 'Accounts', 'Commercial']);
      allow delete: if isOneOfRoles(['Super Admin']);
    }

    // Invoices collection rules
    match /invoices/{invoiceId} {
        allow read: if isOneOfRoles(['Super Admin', 'Admin', 'Viewer', 'Accounts', 'Commercial']);
        allow create, update: if isOneOfRoles(['Super Admin', 'Admin', 'Accounts', 'Commercial']);
        allow delete: if isOneOfRoles(['Super Admin']);
    }

    // Sales Invoice collection rules
    match /sales_invoice/{saleId} {
      allow read: if isOneOfRoles(['Super Admin', 'Admin', 'Viewer', 'Accounts']);
      allow create, update: if isOneOfRoles(['Super Admin', 'Admin', 'Accounts']);
      allow delete: if isOneOfRoles(['Super Admin']);
    }
    
     // Payments collection rules
    match /payments/{paymentId} {
      allow read: if isOneOfRoles(['Super Admin', 'Admin', 'Viewer', 'Accounts', 'Commercial']);
      allow create, update: if isOneOfRoles(['Super Admin', 'Admin', 'Accounts', 'Commercial']);
      allow delete: if isOneOfRoles(['Super Admin']);
    }
    
    // Proforma Invoices collection rules
    match /proforma_invoices/{piId} {
      allow read: if isOneOfRoles(['Super Admin', 'Admin', 'Viewer', 'Commercial']);
      allow create, update: if isOneOfRoles(['Super Admin', 'Admin', 'Commercial']);
      allow delete: if isOneOfRoles(['Super Admin']);
    }

    // Demo Machine Factories collection rules
    match /demo_machine_factories/{factoryId} {
      allow read: if isOneOfRoles(['Super Admin', 'Admin', 'Viewer', 'DemoManager', 'Commercial']);
      allow create, update: if isOneOfRoles(['Super Admin', 'Admin', 'DemoManager', 'Commercial']);
      allow delete: if isOneOfRoles(['Super Admin']);
    }

    // Demo Machines collection rules
    match /demo_machines/{machineId} {
      allow read: if isOneOfRoles(['Super Admin', 'Admin', 'Viewer', 'DemoManager', 'Commercial']);
      allow create, update: if isOneOfRoles(['Super Admin', 'Admin', 'DemoManager', 'Commercial']);
      allow delete: if isOneOfRoles(['Super Admin']);
    }

    // Demo Machine Applications collection rules
    match /demo_machine_applications/{applicationId} {
      allow read: if isOneOfRoles(['Super Admin', 'Admin', 'Viewer', 'DemoManager', 'Commercial']);
      allow create, update: if isOneOfRoles(['Super Admin', 'Admin', 'DemoManager', 'Commercial']);
      allow delete: if isOneOfRoles(['Super Admin']);
    }
    
    // Installation Reports collection rules
    match /installation_reports/{reportId} {
        allow read: if isOneOfRoles(['Super Admin', 'Admin', 'Viewer', 'Service', 'Accounts', 'Commercial']);
        allow create, update: if isOneOfRoles(['Super Admin', 'Admin', 'Service', 'Commercial']);
        allow delete: if isOneOfRoles(['Super Admin']);
    }

    // Purchase Orders and Inventory Orders
    match /purchase_orders/{orderId} {
       allow read: if isOneOfRoles(['Super Admin', 'Admin', 'Viewer', 'Accounts', 'Commercial']);
       allow create, update: if isOneOfRoles(['Super Admin', 'Admin', 'Accounts', 'Commercial']);
       allow delete: if isOneOfRoles(['Super Admin']);
    }
    
    match /inventory_orders/{orderId} {
       allow read: if isOneOfRoles(['Super Admin', 'Admin', 'Viewer', 'Accounts', 'Commercial']);
       allow create, update: if isOneOfRoles(['Super Admin', 'Admin', 'Accounts', 'Commercial']);
       allow delete: if isOneOfRoles(['Super Admin']);
    }

    // Petty Cash collections
    match /petty_cash_accounts/{accountId} {
      allow read: if isOneOfRoles(['Super Admin', 'Admin', 'Accounts', 'Viewer']);
      allow create: if isOneOfRoles(['Super Admin', 'Admin', 'Accounts']) && request.resource.data.name is string && request.resource.data.balance is number;
      allow update: if isOneOfRoles(['Super Admin', 'Admin', 'Accounts']);
      allow delete: if isOneOfRoles(['Super Admin']);
    }
    
    match /petty_cash_categories/{categoryId} {
      allow read: if isOneOfRoles(['Super Admin', 'Admin', 'Accounts', 'Viewer']);
      allow create: if isOneOfRoles(['Super Admin', 'Admin', 'Accounts']) && request.resource.data.name is string;
      allow update: if isOneOfRoles(['Super Admin', 'Admin', 'Accounts']);
      allow delete: if isOneOfRoles(['Super Admin']);
    }

    match /petty_cash_transactions/{transactionId} {
      allow read: if isOneOfRoles(['Super Admin', 'Admin', 'Accounts', 'Viewer']);
      allow create, update: if isOneOfRoles(['Super Admin', 'Admin', 'Accounts']);
      allow delete: if isOneOfRoles(['Super Admin']);
    }

    // Challan collections
    match /delivery_challans/{challanId} {
      allow read: if isOneOfRoles(['Super Admin', 'Admin', 'Viewer', 'Accounts']);
      allow create, update: if isOneOfRoles(['Super Admin', 'Admin', 'Accounts']);
      allow delete: if isOneOfRoles(['Super Admin']);
    }

    match /demo_machine_challans/{challanId} {
      allow read: if isOneOfRoles(['Super Admin', 'Admin', 'Viewer', 'DemoManager', 'Commercial']);
      allow create, update: if isOneOfRoles(['Super Admin', 'Admin', 'DemoManager', 'Commercial']);
      allow delete: if isOneOfRoles(['Super Admin']);
    }
    
    // General Settings collections
    match /company_profile/{docId} {
      allow read: if request.auth != null; 
      allow write: if isOneOfRoles(['Super Admin', 'Admin']);
    }
    
    match /financial_settings/{docId} {
      allow read: if request.auth != null && isOneOfRoles(['Super Admin', 'Admin', 'Viewer', 'Accounts', 'Commercial']);
      allow write: if isOneOfRoles(['Super Admin', 'Admin']);
    }
    
    match /pi_layout_settings/{docId} {
      allow read: if request.auth != null && isOneOfRoles(['Super Admin', 'Admin', 'Viewer', 'Accounts', 'Commercial']);
      allow write: if isOneOfRoles(['Super Admin', 'Admin']);
    }    
    
    match /site_settings/{docId} {
      allow read: if request.auth != null;
      allow write: if isOneOfRoles(['Super Admin', 'Admin']);
    }
    
    // Counters collection rules
    match /counters/{counterId} {
      allow read: if isOneOfRoles(['Super Admin', 'Admin']);
      allow write: if isOneOfRoles(['Super Admin', 'Admin']);
    }
  }
}
