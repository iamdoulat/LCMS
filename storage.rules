
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read any file.
    // This is a common pattern for public assets like images.
    match /{allPaths=**} {
      allow read: if request.auth != null;
    }

    // Rules for user profile images.
    // This rule specifically grants write access to the profile image path.
    match /profileImages/{userId}/{fileName} {
      // Only the authenticated user can write to their own profile image path.
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for demo machine images.
    // This rule specifically grants write access to the demo machine images path.
    match /demoMachineImages/{machineId}/{fileName} {
      // Allow any authenticated user to upload/update demo machine images.
      allow write: if request.auth != null;
    }

    // Rules for company logos
    // This rule allows any authenticated user to write to the company logos path.
    // Access to the page performing the upload should be restricted by app logic.
    match /companyLogos/{fileName} {
      allow write: if request.auth != null;
    }

    // Rules for PI layout settings images.
    // This rule allows any authenticated user to write to the piLayoutSettings path.
    // Access to the page performing the upload should be restricted by app logic.
    match /piLayoutSettings/{fileName} {
      allow write: if request.auth != null;
    }
  }
}
